<Window x:Class="EmotionRecognition.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:EmotionRecognition.ViewModels"
        Title="Emotion Recognition" Height="1500" Width="1500" WindowStartupLocation="Manual" WindowState="Maximized" Background="WhiteSmoke">

    <!--<Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>-->

    <!-- Better to fit Height and Width to Screen Height and Width ??-->

    <Grid Margin="50,80,50,50">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Webcam Streaming Container-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" Grid.Row="0"  Background="Black" CornerRadius="10">
                <!-- Camera Stream-->
            </Border>
        </Grid>

        <!-- Welcome Msg Container -->
        <Border Grid.Column="0" Grid.Row="1">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="40" Name="UserMessage">
                Bitte stellen Sie sich vor die Kamera um zu beginnen
            </Label>
        </Border>

        <!-- Points and Emoji Container -->
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Points Div -->
            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Background="LightSteelBlue" CornerRadius="10,10,0,0">
                    <!-- Label -->
                    <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="30">
                        Points
                    </Label>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Background="#dde7e8" CornerRadius="0,0,10,10">
                    <!-- Points -->
                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="100" Name="Points"></Label>
                </Border>
            </Grid>

            <!-- Emoji Div -->
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Background="LightSteelBlue" CornerRadius="10,10,0,0">
                    <!-- Label -->
                    <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="30">
                        Emoji
                    </Label>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Background="#dde7e8" CornerRadius="0,0,10,10" Padding="5">
                    <!-- Emoji -->
                    <Image Name="Emoji"></Image>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
