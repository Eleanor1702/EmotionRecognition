<Window x:Class="EmotionRecognition.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:EmotionRecognition.ViewModels"
        Title="Emotion Recognition" Height="1500" Width="1500" WindowStartupLocation="Manual" WindowState="Normal">


    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <!-- Better to fit Height and Width to Screen Height and Width ??-->

    <Grid Margin="50,80,50,50">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Background="Black">
            <!-- Camera Stream-->
        </Border>

        <Border Grid.Column="0" Grid.Row="1">
            <Label Background="FloralWhite" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30">
                A Welcome Sentence to pull Guests Attention
            </Label>
        </Border>

        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="1" Background="GhostWhite">
                <!-- Points -->
            </Border>

            <Border Grid.Column="2" Grid.Row="0" Background="GhostWhite">
                <!-- Emotion generated -->
            </Border>
        </Grid>
    </Grid>
</Window>
